{
  "packages": [
    "packages/*"
  ],
  "version": "0.0.0",
  "command": {
    "publish": {
      "ignoreChanges": [
        ".gitignore",
        "*.log",
        "*.md"
      ],
      "registry": "https://npm.pkg.github.com",
      "allowBranch": [
        "main"
      ]
    },
    "bootstrap": {
      "ignore": "src",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}
